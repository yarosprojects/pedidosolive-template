---
import Layout from "../../layouts/Layout.astro";
import { getSupabaseServerClient } from "../../lib/supabase";

const card = Astro.url.searchParams.get("card");

const supabase = getSupabaseServerClient(Astro);
const { data: pedido, error } = await supabase
    .from("orders")
    .select("*")
    .eq("id", card)
    .single();

if (error || !pedido) {
    console.error(error);
    return Astro.redirect("/dashboard");
}

let officeUser: { name: string; surname: string } | null = null;

if (pedido.office_order_id) {
    const { data, error } = await supabase
        .from("profiles")
        .select("name, surname")
        .eq("id", pedido.office_order_id)
        .single();

    if (!error && data) {
        officeUser = data;
    }
}
---

<Layout title="Editar pedido">
    <div class="flex justify-center items-center w-full min-h-screen px-3">
        <div class="w-full md:w-xl mx-auto">
            <div
                class="bg-white border border-black/10 shadow-md shadow-black/20 rounded-xl p-5 flex flex-col gap-4 transition-all"
                transition:name={`editar-pedido-${card}`}
            >
                <div class="flex justify-between items-start w-full">
                    <div>
                        <h3
                            class="text-xs font-semibold uppercase tracking-wider text-gray-500"
                        >
                            Cliente
                        </h3>
                        <p class="text-sm font-medium text-gray-900 mt-1">
                            {pedido.company_name}
                        </p>
                    </div>

                    {
                        pedido.isDone ? (
                            <span class="text-xs px-2 py-1 rounded-full bg-green-100 text-green-700 font-medium">
                                Finalizado
                            </span>
                        ) : (
                            <span class="text-xs px-2 py-1 rounded-full bg-yellow-100 text-yellow-700 font-medium">
                                Pendiente
                            </span>
                        )
                    }
                </div>

                {/* CONTACTO */}
                <div class="flex flex-col gap-2">
                    <h3
                        class="text-xs font-semibold uppercase tracking-wider text-gray-500"
                    >
                        Contacto
                    </h3>

                    <div class="text-sm text-gray-800">
                        {pedido.contact_name}
                        {pedido.contact_surname}
                    </div>

                    <div class="flex flex-col text-xs text-gray-600 gap-1">
                        <span>{pedido.contact_email}</span>
                        <div class="flex flex-row gap-1 items-center">
                            <span class="opacity-75">+34</span>
                            <span>{pedido.contact_phone}</span>
                        </div>
                    </div>
                </div>

                {/* SEPARADOR */}
                <div class="w-full h-px bg-black/10"></div>

                {/* SERVICIO */}
                <div class="flex flex-col gap-1">
                    <span
                        class="text-xs font-semibold uppercase tracking-wider text-gray-500"
                    >
                        Servicio solicitado
                    </span>

                    <p class="text-sm text-gray-900 leading-relaxed bg-gray-500/8 px-4 py-3 rounded-xl">
                        {pedido.order_details}
                    </p>
                </div>

                {/* CARD FOOTER */}
                <div
                    class="flex justify-between items-center pt-3 text-xs text-gray-400"
                >
                    <span class="text-black">
                        {new Date(pedido.created_at).toLocaleDateString()}
                    </span>

                    {
                        officeUser ? (
                            <span class="inline-flex items-center gap-1 px-2 py-1 rounded-full bg-blue-50 text-blue-700 text-xs font-medium">
                                <i class="icon-[mdi--office-building]" />
                                Oficina Â· {officeUser.name} {officeUser.surname}
                            </span>
                        ) : (
                            <span class="inline-flex items-center gap-1 px-2 py-1 rounded-full bg-gray-100 text-gray-600 text-xs italic">
                                <i class="icon-[mdi--account]" />
                                Cliente
                            </span>
                        )
                    }
                </div>
            </div>
        </div>
    </div>
</Layout>
